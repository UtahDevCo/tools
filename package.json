{
  "name": "tools",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "TURBO_UI=false turbo run dev",
    "dev:worker": "TURBO_UI=false turbo run dev:worker",
    "deploy": "turbo run deploy",
    "deploy:prod": "turbo run deploy:prod",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types"
  },
  "devDependencies": {
    "prettier": "^3.7.1",
    "shadcn": "^3.5.0",
    "turbo": "^2.5.8",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@11.6.1",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
