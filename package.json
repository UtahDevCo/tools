{
  "name": "tools",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:stream": "TURBO_UI=false turbo run dev",
    "gtd": "TURBO_UI=false turbo run dev --filter=@quiver/gtd",
    "wkt": "TURBO_UI=false turbo run dev --filter=wkt",
    "deploy": "turbo run deploy",
    "deploy:prod": "turbo run deploy:prod",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types"
  },
  "devDependencies": {
    "baseline-browser-mapping": "^2.8.32",
    "prettier": "^3.7.1",
    "shadcn": "^3.5.0",
    "turbo": "^2.5.8",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.3.1",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
